@{
    ViewData["Title"] = "Home Page";
}
<br>
<br>
<br>
<div class="row">
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center orange">
                @* <img src="images/sample-1.jpg"> *@
                <i class="material-icons large white-text">star_rate</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Especialidad"
                    asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content ">
                <span class="card-title">Especialidades</span>
                <p>Conoce las nuevas Especilidades que tenemos para ti</p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Especialidad" asp-action="Index">Ver mas</a>
            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center blue darken-1">
                <i class="material-icons large white-text">face</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Medico"
                    asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content ">
                <span class="card-title">Medicos</span>
                <p>Conoce a los profesionales de la salud</p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Medico" asp-action="Index">Ver mas</a>

            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center green accent-4">
                <i class="material-icons large white-text">assignment_ind</i>
                <a class="btn-floating halfway-fab waves-effect waves-light red" asp-controller="Paciente"
                    asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content ">
                <span class="card-title">Pacientes</span>
                <p>Aqui podras consultar la lista de pacientes que estan en este centro</p>
            </div>
            <div class="card-action blue-grey darken-3">
                <a asp-controller="Paciente" asp-action="Index">Ver mas</a>

            </div>
        </div>
    </div>

    <div class="col s12 m4">
        <div class="card">
            <div class="card-image center brown accent-4">
                <i class="material-icons large white-text">access_time</i>
            </div>
            <div class="card-content ">
                <span class="card-title">Turnos</span>
                <p>Aqui podras conocer los distintos turnos de los medicos y pacientes</p>
            </div>
            <div class="card-action blue-grey darken-1">
                <a asp-controller="Turno" asp-action="Index">Asignar Turno</a>
            </div>
        </div>
    </div>
</div>
